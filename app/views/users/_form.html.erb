

<%= form_for @user, { html: {class: "form-horizontal"}} do |f| %>

  <%= render partial: "shared/errors", locals: {object: @user} %>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= f.label :first_name %></label>
    <div class="col-sm-3">
      <%= f.text_field :first_name, class: "col-md-2 form-control"%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= f.label :last_name %></label>
    <div class="col-sm-3">
      <%= f.text_field :last_name, class: "col-md-2 form-control"%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= f.label :email %></label>
    <div class="col-sm-3">
      <%= f.email_field :email, class: "col-md-2 form-control"%>
    </div>
  </div>

  <% if @user.id %>

    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-10">
        <%= f.submit "Update User", class: "btn btn-primary" %>
        <%= link_to "Cancel", users_path, class: "btn btn-default" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-3">
        <div class="well col-md-12 text-center">
          <%= link_to "Delete User", user_path(@user), class: "btn btn-danger", align: "center",
          method: "delete", data: { confirm: "Are you sure?" }%>
        </div>
      </div>
    </div>

  <% else %>

    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-10">
        <%= f.submit "Create User", class: "btn btn-primary" %>
        <%= link_to "Cancel", users_path, class: "btn btn-default" %>
      </div>
    </div>

  <% end %>

<% end %>
