
<div class="container">

  <div class="page-header">
    <h1>New Task</h1>
  </div>

  <div>
    <%= link_to "Tasks", tasks_path %> > New Task
  </div>
  <br>

  <%= form_for Task.new, { html: {class: "form-horizontal"}} do |f| %>

      <div class="form-group">
        <label class="col-sm-2 control-label"><%= f.label :description %></label>
        <div class="col-sm-3">
          <%= f.text_field :description, class: "col-md-2 form-control"%>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
          <%= f.submit "Create Task", class: "btn btn-primary" %>
          <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
        </div>
      </div>

  <% end %>

</div>
