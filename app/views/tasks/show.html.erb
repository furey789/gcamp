
<div class="container">

  <div class="page-header">
    <div class="pull-right">
      <%= link_to 'Edit', edit_task_path(@task), class: "btn btn-info" %>
    </div>
    <h1>
      <% if @task.complete==true %>
        <s><%= @task.description %></s>
        &nbsp;
      <% else %>
        <%= @task.description %>
        &nbsp;
      <% end %>
      <% if @task.due_date %>
        <%= @task.due_date.strftime("%D") %>
      <% end %>
    </h1>
  </div>

  <ol class="breadcrumb">
    <li><%= link_to 'Tasks', tasks_path %></li>
    <li><%= @task.description %></li>
  </ol>

  </br>

</div>
