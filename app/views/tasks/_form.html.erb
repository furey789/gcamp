
<%= form_for @task, { html: {class: "form-horizontal"}} do |f| %>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= f.label :description %></label>
    <div class="col-sm-3">
      <%= f.text_field :description, class: "col-md-2 form-control"%>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= f.label :due_date %></label>
    <div class="col-sm-3">
      <%= f.date_field :due_date, class: "col-md-2 form-control"%>
    </div>
  </div>

  <% if @task.id %>
  
    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-10 checkbox">
        <label>
          <%= f.check_box :complete, {:checked=>false} %>
          <%= f.label :complete %>
        </label>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-10">
        <%= f.submit "Update Task", class: "btn btn-primary" %>
        <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
      </div>
    </div>

  <% else %>

    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-10">
        <%= f.submit "Create Task", class: "btn btn-primary" %>
        <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
      </div>
    </div>

  <% end %>

<% end %>
