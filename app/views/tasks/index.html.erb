
<div class="container">

  <div class="page-header">
    <div class="pull-right">
      <%= link_to "New Task", new_project_task_path(@project), class: "btn btn-info"%>
    </div>
    <h1>Tasks for <%= @project.name %></h1>
  </div>

  <ol class="breadcrumb">
    <li><%= link_to 'Projects', projects_path %></li>
    <li><%= link_to @project.name, project_path(@project) %></li>
    <li>Tasks</li>
  </ol>

  <table class="table">

      <thead>
        <tr>
          <th>Description</th>
          <th>Due On</th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>

          <tr>
              <td>
                <% if task.complete %>
                  <s><%= link_to task.description, project_task_path(@project,task) %></s>
                <% else %>
                  <%= link_to task.description, project_task_path(@project,task) %>
                  <span class="badge"> <%= task.comments.count %> </span>
                <% end %>
              </td>
              <td>
                <% if task.due_date %>
                  <%= task.due_date.strftime("%D") %>
                <% end %>
              </td>
              <td align="right">
                <%= link_to "Edit", edit_project_task_path(@project,task), class: "btn btn-info" %>
                &nbsp;
                <%= link_to '', project_task_path(@project,task), method: 'delete',
                    class: "glyphicon glyphicon-remove" %>
              </td>
          </tr>

        <% end %>
      </tbody>

  </table>

</div>
