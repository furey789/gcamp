<!DOCTYPE html>
<html>

<head>
  <title>Gcamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">

      <div class="nav navbar-nav">
        <%= link_to "gCamp", projects_path, class: "navbar-brand" %>
      </div>

      <div class="nav navbar-nav">
        <li class="dropdown" padding-left: 5px>
         <a class="dropdown-toggle" data-toggle="dropdown">Projects<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <% @projects.each do |project|%>
              <% if project.memberships.pluck(:user_id).include?(current_user.id)%>
                <li> <%=link_to "#{project.name}", project_path(project)%> </li>
              <% end %>
            <% end %>
              <li class="divider"></li>
              <li> <%=link_to "New Project", new_project_path %> </li>
          </ul>
        </li>
      </div>

      <div class="nav navbar-nav">
        <%= link_to "Users", users_path, class: "navbar-brand" %>
      </div>

      <ul class="nav navbar-nav navbar-right">

        <% if session[:user_id].present? %>
          <li>
            <%= link_to current_user.first_name + ' ' + current_user.last_name,
            user_path(current_user) %>
          </li>
          <li>
            <%= link_to "Sign Out", sign_out_path %>
          </li>
        <% end %>

      </ul>
    </div>
  </nav>
.
  <% if notice %>
  <div class="container">
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  </div>
  <% end %>

  <% if alert %>
  <div class="container">
    <div class="alert alert-danger" role="alert">
      <%= alert %>
    </div>
  </div>
  <% end %>

  <%= yield %>   <!-- body of page goes here -->

  <div class="container">
    <footer align=center>
        <hr/>
        <%= link_to "Home", root_path %> |
        <%= link_to "Terms", terms_path %> |
        <%= link_to "About", about_path %> |
        <%= link_to "FAQ", faq_path %>
    </footer>
  </div>


</body>

</html>
