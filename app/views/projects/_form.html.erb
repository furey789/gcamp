
<%= form_for @project, { html: {class: "form-horizontal"}} do |f| %>

  <% @project.errors.any? do %>

    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-6">

      <div class="alert alert-danger">
        <h3> <%= pluralize(@project.errors.count, "error") %>
          prohibited this form form being saved:
        </h3>
        <ul>
          <% @project.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      </div>

      </div>
    </div>

  <% end %>

  <div class="form-group">
    <label class="col-sm-2 control-label"><%= f.label :name %></label>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "col-md-2 form-control"%>
    </div>
  </div>

  <% if @project.id %>

    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-3">
        <%= f.submit "Update Project", class: "btn btn-primary"%>
        <%= link_to "Cancel", projects_path, class: "btn btn-default" %>
      </div>
    </div>

  <% else %>

    <div class="form-group">
      <label class="col-sm-2 control-label"></label>
      <div class="col-sm-3">
        <%= f.submit "Create Project", class: "btn btn-primary"%>
        <%= link_to "Cancel", projects_path, class: "btn btn-default" %>
      </div>
    </div>

  <% end %>

<% end %>
