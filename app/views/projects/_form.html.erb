
<%= form_for @project, { html: {class: "form-horizontal"}} do |f| %>

<div class="form-group">
  <label class="col-sm-2 control-label"><%= f.label :name %></label>
  <div class="col-sm-6">
    <%= f.text_field :name, class: "col-md-2 form-control"%>
  </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label"></label>
  <div class="col-sm-3">
    <%= f.submit "Create Project", class: "btn btn-primary"%>
    <%= link_to "Cancel", projects_path, class: "btn btn-default" %>
  </div>
</div>

<% end %>
